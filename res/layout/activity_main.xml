<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/view"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="@drawable/bj4_01"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:background="@drawable/bj3"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.334"
            android:gravity="center"
            android:orientation="vertical" >

            <SurfaceView
                android:id="@+id/menu_sufaceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.666"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bj1_03"
                android:gravity="center"
                android:orientation="vertical"
                 >
                 <TextView 
                     android:id="@+id/menuTitle"
                     android:layout_width="match_parent"
                     android:layout_height="0dip"
                     android:layout_weight="0.25"
                     android:gravity="center"
                     android:text="键位功能说明"
                     android:textSize="25dp"
                     android:textColor="@android:color/white"
                     />
                 <TextView 
                     android:id="@+id/menu"
                     android:layout_width="match_parent"
                     android:layout_height="0dip"
                     android:layout_weight="0.75"
                     android:gravity="center_vertical"
                     android:paddingLeft="40dp"
                     android:textColor="@android:color/white"
                     android:textSize="20dp"
                     android:text="1.采购入库\n2.退货入库\n3.销售出库\n4.数据维护\n5.追溯上线\n6.配置"
                     />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>